    <external-files-path
        name="downloads"
        path="Download/" />

    <!-- Permite acceder a archivos en cualquier carpeta externa de la app -->
    <external-files-path
        name="external_files"
        path="." />

    <!-- Si necesitas acceso a archivos temporales -->
    <cache-path
        name="cache"
        path="." />

    <!-- Si necesitas acceso a archivos internos de la app -->
    <files-path
        name="files"
        path="." />
</paths>